<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_g_neres"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="#CCC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terror"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkComedy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comedia"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkDrama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acció"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkHorror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibuixos"
            android:padding="8dp"/>

        <!-- Agrega más géneros según necesites -->

    </LinearLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listo"
        android:layout_marginTop="16dp"/>

</LinearLayout>