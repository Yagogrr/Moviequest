<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchBarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/shutter_island"
                android:contentDescription="Menu Icon" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:hint="Busca una pel·lícula..."
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:background="@android:color/transparent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/shutter_island"
                android:contentDescription="Search Icon" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Section 1: Millor valorades -->
    <TextView
        android:id="@+id/bestRatedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Millor valorades"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchBarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/bestRatedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bestRatedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Section 2: TOP 10 -->
    <TextView
        android:id="@+id/top10Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP 10"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bestRatedScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/top10Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top10Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Section 3: Misteri -->
    <TextView
        android:id="@+id/mysteryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misteri"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/top10Scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/mysteryScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mysteryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shutter_island" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
