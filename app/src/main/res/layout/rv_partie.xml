<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloPartie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo de la Partie"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <androidx.cardview.widget.CardView
    android:layout_width="160dp"
    android:layout_height="160dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProyectorPartie"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:scaleType="centerCrop"
        android:src="@drawable/proyector"
        app:shapeAppearanceOverlay="@style/RoundedCornerShape"/>

</androidx.cardview.widget.CardView>
</LinearLayout>